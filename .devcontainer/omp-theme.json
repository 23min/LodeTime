{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#005f87",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "full",
            "max_depth": 3,
            "folder_separator_icon": "/",
            "home_icon": "~"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#4c4c4c",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#d7af00{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#af5f00{{ end }}",
            "{{ if gt .Ahead 0 }}#5faf00{{ end }}",
            "{{ if gt .Behind 0 }}#d7005f{{ end }}"
          ],
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }} ",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "branch_icon": "\uE0A0 ",
            "branch_max_length": 25,
            "truncate_symbol": "â€¦"
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#949494",
          "template": "{{ .FormattedMs }} ",
          "properties": {
            "threshold": 3000,
            "style": "austin"
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#5faf00",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#af0000{{ end }}"
          ],
          "template": "{{ if gt .Code 0 }}\u2718{{ else }}\u2714{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#5fafaf",
          "template": "\uE235 {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }} "
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#5faf00",
          "template": "\uE718 {{ .Full }} "
        },
        {
          "type": "dotnet",
          "style": "plain",
          "foreground": "#af5fd7",
          "template": "\uE77F {{ .Full }} "
        },
        {
          "type": "azure",
          "style": "plain",
          "foreground": "#00afd7",
          "template": "\uFD03 {{ .Name }} "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#d7af5f",
          "template": "{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#5faf5f",
          "template": " {{ .CurrentDate | date \"15:04:05\" }} "
        }
      ]
    }
  ]
}
